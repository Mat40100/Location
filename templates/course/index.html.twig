{% extends 'base.html.twig' %}

{% block title %}Course index{% endblock %}

{% block body %}
    <h1>Course index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Room</th>
                <th>Max customers</th>
                <th>Date time</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.room.name }}</td>
                <td>{{ course.maximumCustomerNumber }}</td>
                <td>{{ course.CourseDate ? course.CourseDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ course.price }}</td>
                <td>
                    <a href="{{ path('app_course_show', {'id': course.id}) }}">show</a>
                    {% if app.user is same as(course.room) %}
                    <a href="{{ path('app_course_edit', {'id': course.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if is_granted("ROLE_CLIENT") %}
        <a href="{{ path('app_course_new') }}">Create new</a>
    {% endif %}
{% endblock %}
