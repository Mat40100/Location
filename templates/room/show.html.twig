{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ room.places }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ room.size }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
        {{ include('room/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
