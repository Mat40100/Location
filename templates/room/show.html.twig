{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.name }}</td>
            </tr>
            <tr>
                <th>Places</th>
                <td>{{ room.places }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ room.size }}</td>
            </tr>
        </tbody>
    </table>


    <h3>Upcoming courses</h3>
    <table class="table">
        <thead>
        <tr>
            <th>Subject</th>
            <th>Creator</th>
            <th>Max customers</th>
            <th>Place left</th>
            <th>Date</th>
            <th>Time</th>
            <th>Price</th>
            <th>actions</th>
        </tr>
        </thead>
    <tbody>
    {% for slotTaken in room.slotTaken %}
                 <tr>
                    <td>{{ slotTaken.course.subject }}</td>
                    <td><a href="{{ path('app_user_show', {'id' : slotTaken.course.creator.id}) }}">{{ slotTaken.course.creator.firstName~" "~slotTaken.course.creator.lastName }}</a></td>
                    <td>{{ slotTaken.course.maximumCustomerNumber }}</td>
                    <td>{{ slotTaken.course.leftPlace() }}</td>
                    <td>{{ slotTaken.slotDate|date('Y-m-d') }}</td>
                    <td>{{ slotTaken.slot.startTime|date('H:i:s')}}</td>
                    <td>{{ slotTaken.course.price }}</td>
                    <td>
                        <a href="{{ path('app_course_show', {'id': slotTaken.course.id}) }}">show</a>
                        {% if app.user is same as(slotTaken.course.creator) %}
                            <a href="{{ path('app_course_edit', {'id': slotTaken.course.id}) }}">edit</a>
                        {% endif %}

                        {% if is_granted("ROLE_CUSTOMER") %}
                            <a href="{{ path('app_course_join', { 'id' : slotTaken.course.id }) }}">Join this course</a> {#TODO : join/leave in function if suscribed or not #}
                            <a href="{{ path('app_course_leave', { 'id' : slotTaken.course.id }) }}">Leave this course</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    <a href="{{ path('app_room_index') }}">back to list</a>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('app_room_edit', {'id': room.id}) }}">edit</a>
        {{ include('room/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
